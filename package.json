{
  "name": "music-theory-practice",
  "version": "1.5.2",
  "description": "A web-based music theory practice application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp dist/src/index.html dist/index.html && cp dist/src/practice.html dist/practice.html",
    "preview": "vite preview",
    "test": "node tests/runner.js",
    "test:unit": "node tests/unit/index.js",
    "test:integration": "node tests/integration/index.js",
    "test:accessibility": "node tests/accessibility/index.js",
    "test:perf-unit": "node tests/performance/index.js",
    "test:old": "echo 'Open browser and press Ctrl+Shift+Q to run old tests'",
    "test:browser": "open tests/index.html",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write src/**/*.{js,css,html}",
    "serve:old": "firebase serve --only hosting --port 5002",
    "serve:new": "npm run build && npm run preview",
    "verify": "npm run lint && npm run test && npm run build",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "build:analyze": "ANALYZE=true npm run build",
    "dev:perf": "vite --mode development --open --port 5004",
    "test:perf": "node tests/performance/index.js",
    "css:analyze": "node scripts/analyze-css.js",
    "profile": "node --inspect scripts/profile-build.js",
    "verify:phase2": "node scripts/verify-phase2.js",
    "analyze:performance": "node scripts/analyze-performance.js",
    "analyze:bundle": "ANALYZE=true npm run build",
    "test:performance": "npm run build && npm run verify:phase2 && npm run analyze:performance",
    "phase2:complete": "npm run verify:phase2 && npm run analyze:performance && echo 'ðŸŽ‰ Phase 2 Complete!'"
  },
  "keywords": [
    "music",
    "theory",
    "practice",
    "education",
    "pwa"
  ],
  "author": "Music Theory Practice Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-dynamic-import-vars": "^2.1.5",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^7.0.7",
    "eslint": "^8.55.0",
    "postcss": "^8.4.32",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.1.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.24.0",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^1.0.0",
    "vite-plugin-pwa": "^0.17.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
